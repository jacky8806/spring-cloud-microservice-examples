        <groupId>org.zpng</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>cloud-zipkin</artifactId>

    <properties>
        <docker.image.prefix>zpng</docker.image.prefix>
    </properties>

<dependencies>
    <!--zipkin跟踪-->
